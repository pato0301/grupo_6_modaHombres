<!DOCTYPE html>
<html lang="es">

<%- include('partials/head.ejs') %> 

<body>
    
    <%- include('partials/headerNavAdmins.ejs') %> 

    <form action="/admin" method="post" id="newProdForm" enctype="multipart/form-data">
        <div class="producto-add">
            <div class="cont-img-prod">
                <img src="/images/producto/default_avatar.png" alt="" class="img-prod" id="prodImg">
                <input type="file" name="productImage" id="prodPhoto" style="display: none;" />
            </div>
            <div class="det-prod">
                
                <div class="box-name">
                    <!-- <h1>Nombre del Producto</h1> -->
                    <label for="name-prod" class="label-name-prod">Nombre del Producto</label>
                    <input type="text" name="nombreProducto" placeholder="Nombre del Producto" class="input-name-prod" id="nameProduct">
                    <small class="text-danger" id="errorName"></small>
                    <label class="text-success" id="exito"></label>
                </div>
                <div class="box-price"> 
                    <!-- <h3>$Precio</h3> -->
                    <label for="price" class="label-name-prod">Precio del Producto</label>
                    <input type="text" name="precioProducto" placeholder="Precio del Producto" class="input-name-prod" id="price"> 
                    <small class="text-danger" id="errorPrice"></small>
                </div>
                <textarea name="descriptionProd" class="texto-desc-prod" id="prod-desc" cols="15" rows="12" placeholder="Descripcion:"></textarea>
                <small class="text-danger" id="errorText"></small>
                <div class="talle">
                    <h4>Talle Disponibles:</h4>
                    <!-- <ul class="talles-carga-prod"> -->
                        <% let prenda = "" %> 
                        <select name="talles" class="talles-carga-prod" id="talles" multiple>
                            <% for( let i = 0; i < talles.length; i++ ) { %>
                                <% if (i === 0) { %>
                                    <% prenda = talles[i].dataValues.prenda %> 
                                    <option value="<%= talles[i].dataValues.idtalle %>" disabled><%= talles[i].dataValues.prenda %></option>
                                    <option value="<%= talles[i].dataValues.idtalle %>"><%= talles[i].dataValues.talle %> </option>
                                <% } else if (prenda != talles[i].dataValues.prenda) { %>
                                    <% prenda = talles[i].dataValues.prenda %>
                                    <option value="<%= talles[i].dataValues.idtalle %>" disabled><%= talles[i].dataValues.prenda %></option>
                                    <option value="<%= talles[i].dataValues.idtalle %>"><%= talles[i].dataValues.talle %> </option>
                                <% } else { %>
                                    <option value="<%= talles[i].dataValues.idtalle %>"><%= talles[i].dataValues.talle %> </option>
                                <% } %>
                            <% } %>
                        </select>
                </div>
                <div class="box-checks">
                    <input type="checkbox" name="currentSeason" id="nameProduct">
                    <label for="name-prod">Current season</label>
                </div>
                <div class="box-checks">
                    <input type="checkbox" name="active" id="nameProduct" class="checkProd" checked>
                    <label for="name-prod">Producto Activo?</label>
                </div>
                <div class="button-admin mt-3">
                    <!-- <form action="" method="POST" class="form-carga-producto"> -->
                    <div class="form-carga-producto">
                        <button type="submit" class="boton-carga-producto">AÃ±adir Producto</button>
                    </div>
                    <!-- </form> -->
                    <!-- <form action="/admin?_method=put" method="POST" class="form-edit-producto"> -->
                    <div class="form-edit-producto">
                        <a href="/admin/edit/selectProduct"><button type="button" class="boton-edit-producto">Editar / Eliminar</button></a>
                    </div>
                    <!-- <div class="form-edit-producto">
                        <a href="/admin/cargaVarios"><button type="button" class="boton-edit-producto">Cargar Otros Datos</button></a>
                    </div> -->
                    <!-- </form> -->
                    <!-- <a href="/products/edit/" class="action-button edit">EDITAR PRODUCTO</a> -->
                    <!-- <form action="/admin?_method=delete" method="POST" class="form-delete-producto"> -->
                    <!-- <div class="form-delete-producto">
                        <a href="/admin/delete/selectProduct"><button type="submit" class="boton-delete-producto">Eliminar</button></a>
                    </div> -->
                    <!-- </form> -->
                </div>
            </div>
        </div>
    </form>
    <script src="/javascripts/adminProductNew.js"></script>
</body>
</html>