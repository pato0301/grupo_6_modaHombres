<%- include('./partials/head.ejs') %> 
<body>

    <%- include('./partials/navBarAdminLogin.ejs') %> 

    <div class="container-fluid d-flex flex-wrap justify-content-center align-items-center login-container">
        <div class="login">
            <h1><%= typePage %></h1>
            <form method="POST" action="">
                <% if (typePage == 'Admin Register') { %>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-3 col-form-label">Username</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control-plaintext" name="adminName" id="adminName" placeholder="username">
                        </div>
                    </div>
                <% } %>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                    <input type="email" class="form-control-plaintext" name="email" id="email" placeholder="email@example.com">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-8 col-sm-4 col-form-label">Password</label>
                    <div class="col-9 col-sm-8">
                        <input type="password" class="form-control" name="password" id="password">
                    </div>
                </div>
                <% if (typePage != 'Admin Register') { %>
                    <div class="checkbock-rem-adm  mb-3">
                        <div class="row-checkbox-rem-adm ">
                            <input type="checkbox" name="remember" id="">
                        </div>
                        <div class="label-checkbox-rem-adm ">
                            <label class="form-check-label" for="">Recordarme como usuario</label>
                        </div>
                    </div>
                    <!-- <div class="admin-rem mb-3">
                        <input type="checkbox" name="rememberCookie" class="form-check-input checkRemAdmin" id="exampleCheck1" checked>
                        <label class="form-check-label" for="exampleCheck1">Recordame</label>
                    </div> -->
                <% } %>
                <% if (typePage == 'Admin Register') { %>
                    <button type="submit" class="btn btn-outline-primary">Registrase</button>
                <% }else{ %>
                    <button type="submit" class="btn btn-outline-primary">Iniciar Sesion</button>
                <% } %>
            </form>
            <% if (typePage == "error") { %>
                <div class="mt-5">
                    <h5 class="text-danger">Usuario o Contrase√±a Invalida</h5>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>