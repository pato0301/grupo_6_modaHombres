                        <div class="label-checkbox">
                            <label for="">Acepto términos y condiciones de privacidad</label>
                        </div>
                    </div>
                    <button type="submit">Registrarme</button>
                </div>
            </form>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>  

    <script src="/javascripts/register.js"></script>
