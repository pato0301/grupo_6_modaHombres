                </div>
                <!-- <div class="errUser">
                    <ul></ul>
                </div> -->
                <input type="email" name="email" placeholder="Email" class="email" required />
                <div class="container-fluid">
                    <small class="text-danger" id="errorEmail"><%= %> </small>
                </div>
                <!-- <div class="errEmail">
                    <ul></ul>
                </div>                   <small class="text-danger" width="25"></small> -->
                <input type="password" name="password" placeholder="Contraseña" class="password" minlength="8" maxlength="12" required>
                <div class="container-fluid">
                    <small class="text-danger" id="errorPassword"></small>
                </div>
                <!-- <div class="err">
                    <ul></ul>
                </div>
                <small class="text-danger" width="25"></small> -->
                
                <!-- <input type="text" name="nombre" placeholder="Nombre" >
